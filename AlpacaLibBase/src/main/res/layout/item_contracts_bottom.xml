<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    >

    <TextView
        android:id="@+id/mTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="12dp"
        android:gravity="left"
        android:text="甲方签名"
        android:textColor="#1a1a1a"
        android:textSize="12sp"
        />

    <FrameLayout
        android:id="@+id/ll_sign"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/mTitle1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_signature"
        >

        <ImageView
            android:id="@+id/mSignImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:adjustViewBounds="true"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/mAudioTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_sign"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="12dp"
        android:gravity="left"
        android:text="甲方法定监护人签名"
        android:textColor="#1a1a1a"
        android:textSize="12sp"
        />

    <FrameLayout
        android:id="@+id/ll_audio_sign"
        android:layout_width="match_parent"
        android:layout_height="120dp"

        android:layout_below="@id/mAudioTitle"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_signature"
        >

        <ImageView
            android:id="@+id/mAudioSignImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:adjustViewBounds="true"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/mTime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_audio_sign"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="left"
        android:text="2021年01月14日"
        android:textColor="#1a1a1a"
        android:textSize="10sp"
        />

    <TextView
        android:id="@+id/mTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mTime1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="left"
        android:text="乙方：湖南羊驼教育科技有限公司"
        android:textColor="#1a1a1a"
        android:textSize="12sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mTitle2"
        android:layout_marginLeft="15dp"
        android:gravity="left"
        android:text="公司盖章："
        android:textColor="#1a1a1a"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/mTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mTitle2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        android:gravity="left"
        android:text="2021年01月14日"
        android:textColor="#1a1a1a"
        android:textSize="10sp"
        />

    <ImageView
        android:id="@+id/ivSeal"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignTop="@id/mTitle2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/os_xiaoyangtuo_seal"
        />
</RelativeLayout>